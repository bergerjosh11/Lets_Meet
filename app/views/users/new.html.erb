<%= form_for @user do |form| %>
  <div class="form-container">
    <div>
      <%= form.label :email %>
      <%= form.email_field :email, placeholder: "Email" %>
    </div>
    <div>
      <%= form.label :password %>
      <%= form.password_field :password, placeholder: "Password" %>
    </div>
    <div class="login">
      <%= form.submit "Sign up" %>
    </div>
    <%= render “errors”, target: @user %>
  </div> <!--end form container-->
<% end %>
